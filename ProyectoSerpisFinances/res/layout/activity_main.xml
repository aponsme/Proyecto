<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout 
    	android:id="@+id/shareLILayout0" 
        android:layout_alignParentTop="true"
        android:background="@drawable/shape"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >	
    <TextView 
        android:id="@+id/titulo"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:textStyle="bold"
    	android:textSize="70px"
    	android:layout_marginLeft="100px"
    	android:textColor="#FFFFFF"
    	android:text="SERPIS FINANCES" 
    	android:layout_alignParentTop="true"
    	/>
</LinearLayout>    
    <TextView
        android:id="@+id/random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shareLILayout0"
        android:layout_marginTop="100px"
        android:layout_marginLeft="250px"
        android:background="@android:color/transparent"
        android:textSize="50px"
        android:layout_alignParentLeft="true"
        android:padding="5px"
        >
    </TextView>
    <ImageView
            android:id="@+id/imagen" 
            android:layout_width="wrap_content"
            android:layout_marginLeft="140px"
            android:layout_height="match_parent"
            android:layout_below="@+id/random"
            android:background="@android:color/transparent"
            android:src="@drawable/statistics" />
  
    <LinearLayout 
    	android:id="@+id/shareLILayout" 
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal" >
      
        
  <Button 
    android:id="@+id/botoncarteras"
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:drawableTop="@drawable/carteras" 
    android:textSize="25px"
    android:layout_marginRight="15dp"
    android:text="Gestion"/>      
  <Button android:id="@+id/botonver" android:textSize="25px" android:layout_marginRight="15dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:drawableTop="@drawable/ver" android:background="@android:color/transparent" android:text="Ver" />

  <Button android:id="@+id/botonnoticias" android:textSize="25px" android:layout_marginRight="15dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:drawableTop="@drawable/noticias" android:background="@android:color/transparent" android:text="Noticias" />

  <Button android:id="@+id/botongraficos" android:textSize="25px" android:layout_marginRight="15dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:drawableTop="@drawable/graficas" android:background="@android:color/transparent" android:text="GrÃ¡ficas"  />
  
   <Button android:id="@+id/botonmaps" android:textSize="25px" android:layout_height="wrap_content" android:layout_width="wrap_content" android:drawableTop="@drawable/google" android:background="@android:color/transparent" android:text="Maps"  />

 

</LinearLayout> 
  
</RelativeLayout>